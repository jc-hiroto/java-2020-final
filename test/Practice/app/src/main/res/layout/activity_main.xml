<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="20dp">

    <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="50sp"
            android:textColor="@color/colorPrimaryDark"
    />

    <Button
            android:id="@+id/firstBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainTitle"
            android:layout_marginTop="10dp"
            android:text="@string/text_firstBtn"
    />

    <Button
            android:id="@+id/btn_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebView的示範"
            android:layout_below="@+id/firstBtn"
            android:layout_marginTop="20dp"
    />

    <Button
            android:id="@+id/btn_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast的示範"
            android:layout_below="@+id/btn_wv"
            android:layout_marginTop="20dp"
    />

    <Button
            android:id="@+id/btn_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dialog的示範"
            android:layout_below="@+id/btn_toast"
            android:layout_marginTop="20dp"
    />

</RelativeLayout>